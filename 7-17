#include<stdio.h>
int main(){
	int n;
	scanf("%d",&n);
	int i;
	int time,times,timesum,flag;
	timesum=0;
	for(i=0;i<n;i++){
		scanf("%d %d %d",&flag,&time,&times);
		if(flag==1){
			timesum+=time;
			if(times>1){
                timesum+=(times-1)*20;
            }
		}
	}
	printf("%d",timesum);
	return 0;
}
