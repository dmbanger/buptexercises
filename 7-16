#include<stdio.h>
#include<string.h>
int main(){
	char a[201];
	fgets(a,201,stdin);
	int i;
	int cal=0;
	for(i=0;i<strlen(a);i++){
		if(a[i]=='a'||a[i]=='A'||a[i]=='e'||a[i]=='E'||a[i]=='i'||a[i]=='I'||a[i]=='o'||a[i]=='O'||a[i]=='u'||a[i]=='U'){
			cal++;
		}
		if(a[i]>='a'&&a[i]<='z'){
			a[i]+='A'-'a';
		}
	}
	for(i=0;i<strlen(a);i++){
		printf("%c",a[i]);
	}
	printf("%d",cal);
	return 0;
}
