#include<stdio.h>
void print(int a,int n){
	for(int j=1;j<=a*(n+1)+1;j++){
		if(j%(n+1)==1){
			printf("*");
		}else{
			printf(".");
		}
	}
	printf("\n");
}
int main(){
	int l,c,n;
	scanf("%d %d %d",&l,&c,&n);
	for(int k=0;k<c*(n+1)+1;k++){
			printf("*");
		}
	printf("\n");
	for(int i=0;i<l;i++){
		for(int j=0;j<3;j++){
			print(c,n);
		}
		for(int k=0;k<c*(n+1)+1;k++){
			printf("*");
		}
		printf("\n");
	}
	return 0;
} 
