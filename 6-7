void printPerfect(int n){
    printf("%d=",n);
    for(int i=1;i<n;i++){
        if(n%i==0&&n/2!=i){
            printf("%d+",i);
        }else if(n%i==0){
            printf("%d\n",i);
        }
    }
}
int isPerfect(int n){
    int num=0;
    for(int i=1;i<=n/2;i++){
        if(n%i==0){
            num+=i;
        }
    }
    if(num==n){
        return 1;
    }else{
        return 0;
    }
}
